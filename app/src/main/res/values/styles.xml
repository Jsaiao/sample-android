<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.OmiseGOButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/ripple_round_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.OmiseGOOutlineButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/ripple_round_outline_shape</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
